pipeline {
    agent any
    environment {
        bucket = "sam-jenkins-demo-us-east-2-ranaziauddin"
        region = "us-east-2"
        aws_credential = "AWSReservedSSO_AdministratorAccess_564bcbbbca5e5655/rzdin@enquizit.com"
        application_name = "Nodejs"
       
    }
     stages{
        stage("Nodejs build"){
            tools {nodejs "NODEJS"}
            steps {
                sh 'rm -rf *.zip'
                sh "npm install"
               
               
    
                sh "zip 'myapp_${BUILD_TIMESTAMP}.zip' db jenkinsfile  model  node_modules/*  README.md utils handler  LICENSE myapp  package.json  serverless.yml"
              
               
                  
        }
}
        stage("push artifacts"){
            steps{
                 sh  "mkdir -p output"
                 writeFile file: "output/myapp_${BUILD_TIMESTAMP}.zip"
                
               
                  }
            }
        stage("archive artifacts"){
            steps{
                 archiveArtifacts artifacts: 'output/*.zip'
                
               
                  }
            }
        stage("Upload"){
            steps{
                withAWS(credentials: "${aws_credential}", region: "${region}"){
                s3Upload(file:"myapp_${BUILD_TIMESTAMP}.zip", bucket:"${bucket}")
               
                  }
            }
    
        }
     }  
    }



