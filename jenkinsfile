pipeline {
    agent any
    environment {
        bucket = "sam-jenkins-demo-us-east-2-ranaziauddin"
        region = "us-east-2"
        aws_credential = "AWSReservedSSO_AdministratorAccess_564bcbbbca5e5655/rzdin@enquizit.com"
        application_name = "Nodejs"
    }
     stages{
        stage("Nodejs build"){
            tools {nodejs "NODEJS"}
            steps {
                rm -rf *.myapp
                sh "npm install"
                sh 'ls -l'
                sh 'mkdir myapp'
                sh 'cp â€“R /var/lib/jenkins/workspace/my-package-jenkins-job /myapp'
                
    
                sh "zip zipFile: 'myapp-${BUILD_TIMESTAMP}.zip" 
        }
}
        stage("Upload"){
            steps{
                withAWS(credentials: "${aws_credential}", region: "${region}"){
                s3Upload(file:'myapp', bucket:"${bucket}")
               
                  }
            }
        }
     }  
    }



