pipeline {
  agent any
  tools {nodejs "NODEJS"}    
  stages {
    stage('build') {
      steps {
          sh 'npm install'
          sh 'zip myfile.zip db  handler  jenkinsfile  LICENSE  model  node_modules  package.json  README.md  serverless.yml  utils'
          sh 'file_name=myfile.zip'
 
          sh 'current_time=$(date "+%Y.%m.%d-%H.%M.%S")'
          echo "Current Time : $current_time"
 
          sh 'new_fileName=$file_name.$current_time'
 
      }
    }
  }
}
