pipeline {
    agent any
    environment {
        bucket = "sam-jenkins-demo-us-east-2-ranaziauddin"
        region = "us-east-2"
        aws_credential = "AWSReservedSSO_AdministratorAccess_564bcbbbca5e5655/rzdin@enquizit.com"
        application_name = "Nodejs"
    }
    stages{
        stage("Nodejs build"){
            tools {nodejs "NODEJS"}
            steps {
                
                sh "npm install"
        }
}
        stage("zipfiles"){
            steps {
                sh "mkdir -p output"
                writeFile file: "output/myfile-${BUILD_NUMBER}.zip", zip zipFile: "db  handler  jenkinsfile  LICENSE  model  node_modules  package.json  README.md  serverless.yml  utils"
        }
    }
        stage("Upload"){
            steps{
                withAWS(credentials: "${aws_credential}", region: "${region}"){
                s3Upload(file:'myfile.zip', bucket:"${bucket}")
               
                  }
            }
        }
     }  
    }



