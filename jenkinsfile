pipeline {
    agent any
    environment {
        bucket = "sam-jenkins-demo-us-east-2-ranaziauddin"
        region = "us-east-2"
        aws_credential = "AWSReservedSSO_AdministratorAccess_564bcbbbca5e5655/rzdin@enquizit.com"
        application_name = "Nodejs"
    }
    stages{
        stage("Nodejs build"){
            tools {nodejs "NODEJS"}
            steps {
                sh "npm install"
        }
}
        stage("zipfiles"){
            steps {
                sh "zip zipFile: 'myfile-${BUILD_NUMBER}-${TAG_NAME}-${BRANCH_NAME}.zip' db  handler  jenkinsfile  LICENSE  model  node_modules  package.json  README.md  serverless.yml  utils"
        }
    }
        stage("Upload"){
            steps{
                sh  'withAWS(region:"${region}", credentials:"${aws_credential}){s3Upload(file:"${myfile-${BUILD_NUMBER}-${TAG_NAME}-${BRANCH_NAME}.zip}", bucket:"${bucket}")'
                  }
            }
        }
     }   



