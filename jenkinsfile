pipeline {
    agent any
    environment {
        bucket = "sam-jenkins-demo-us-east-2-ranaziauddin"
        region = "us-east-2"
        aws_credential = "AWSReservedSSO_AdministratorAccess_564bcbbbca5e5655/rzdin@enquizit.com"
        application_name = "Nodejs"
        TAG_NAME = ''
    }
     stages{
        stage("Nodejs build"){
            tools {nodejs "NODEJS"}
            steps {
                sh 'rm -rf *.zip'
                sh "npm install"
               
               
    
                sh "zip 'myapp-${BUILD_TIMESTAMP}-${BUILD_NUMBER}-${TAG_NAME}.zip' db jenkinsfile  model  node_modules/*  README.md utils handler  LICENSE myapp  package.json  serverless.yml"
               
                  
        }
}
        stage("Upload"){
            steps{
                withAWS(credentials: "${aws_credential}", region: "${region}"){
                s3Upload(file:"myapp-${BUILD_TIMESTAMP}-${BUILD_NUMBER}-${TAG_NAME}.zip", bucket:"${bucket}")
               
                  }
            }
        }
     }  
    }



