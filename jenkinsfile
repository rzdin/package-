pipeline {
    agent any
    environment {
        bucket = "sam-jenkins-demo-us-east-2-ranaziauddin"
        region = "us-east-2"
        aws_credential = "AWSReservedSSO_AdministratorAccess_564bcbbbca5e5655/rzdin@enquizit.com"
        application_name = "Nodejs"
    }
     stages{
        stage("Nodejs build"){
            tools {nodejs "NODEJS"}
            steps {
                sh "npm install"
                sh 'ls -l'
                dir ('myfile') {
                    writeFile file:'db  handler  jenkinsfile  LICENSE  model  node_modules  package.json  README.md  serverless.yml  utils'
    
                sh "zip zipFile: 'dir.zip' 
        }
}
        stage("Upload"){
            steps{
                withAWS(credentials: "${aws_credential}", region: "${region}"){
                s3Upload(file:'dir.zip', bucket:"${bucket}")
               
                  }
            }
        }
     }  
    }



