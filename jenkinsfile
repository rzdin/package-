    stages{
    
      stage("Nodejs build"){
         tools {nodejs "NODEJS"} 
        steps {
                sh "npm install"
        }
   }
      stage("zipfiles"){
        steps {
       
            sh "zip zipFile: 'myfile-${BUILD_TIMESTAMP}.zip db  handler  jenkinsfile  LICENSE  model  node_modules  package.json  README.md  serverless.yml  utils'"
        }
    }
 } 
