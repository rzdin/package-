
pipeline {
    agent any
    environment {
        bucket = "sam-jenkins-demo-us-west-2-rana-ziauddin"
        bucket1 = "sam-jenkins-demo-us-east-2-ranaziauddin"
        region = "us-east-1"
        region1 = "us-east-2"
        aws_credential = "AWSReservedSSO_AdministratorAccess_564bcbbbca5e5655/rzdin@enquizit.com"
        application_name = "Nodejs"
       
       
    }
     stages{
          stage ('Copy Build Artifact') {
            steps {
                    sh 'rm -rf *.zip'
                withAWS (credentials: "${aws_credential}", region:"${region1}" ){
                          s3Download(
                                      file:"myapp_${BUILD_TIMESTAMP}_.zip", 
                                      bucket: "${bucket1}", 
                                      path: '/var/lib/jenkins/workspace/my_depolyment_job', 
           
                                      force:true)   
                         }
                         sh "unzip 'myapp_${BUILD_TIMESTAMP}_.zip', dir: '/var/lib/jenkins/workspace/my_depolyment_job/'"
              }   
        }
  }
 } 
